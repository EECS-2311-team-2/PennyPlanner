<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.InsuranceController">
	<children>
		<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="600.0" text="Insurance Growth Prediction" textAlignment="CENTER" GridPane.columnSpan="2">

			<font>
				<Font name="System Bold" size="28.0" />
			</font>
		</Label>

		<GridPane hgap="5.0" layoutX="50.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="5.0" AnchorPane.topAnchor="30.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
				<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
			</rowConstraints>
			<children>
				<Label text="Insurance Amount" />
				<Label fx:id="label1" alignment="CENTER" text="0" GridPane.columnIndex="1" />
				<Label text="Max Insurance allowed" GridPane.rowIndex="1" />
				<Label fx:id="label2" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</children>
		</GridPane>
		<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
			<children>
				<LineChart fx:id="LineChart" prefHeight="150.0" prefWidth="500.0" title="Insurance Chart" VBox.vgrow="ALWAYS">

					<xAxis>
						<CategoryAxis label="Months" side="BOTTOM" />
					</xAxis>
					<yAxis>
						<NumberAxis label="Amount" side="LEFT" />
					</yAxis>
				</LineChart>
				<BarChart fx:id="BarChart" prefHeight="150.0" prefWidth="502.0" title="Detailed Graph" VBox.vgrow="ALWAYS">
					<xAxis>
						<CategoryAxis label="Insurance Category" side="BOTTOM" />
					</xAxis>
					<yAxis>
						<NumberAxis label="Amount" side="LEFT" />
					</yAxis>
				</BarChart>
				<LineChart fx:id="predictionLineChart" prefHeight="200.0" prefWidth="500.0" title="Insurance Growth Prediction">
					<xAxis>
						<CategoryAxis label="Month" />
					</xAxis>
					<yAxis>
						<NumberAxis label="Amount" />
					</yAxis>
				</LineChart>
				<TextFlow prefHeight="34.0" prefWidth="75.0">
					<children>
						<Label fx:id="growthMessageLabel" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="Growth Projection" textAlignment="CENTER" textFill="green">
							<font>
								<Font size="15.0" />
							</font>
						</Label>
					</children></TextFlow>
			</children>
		</VBox>
	</children>
